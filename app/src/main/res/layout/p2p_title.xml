<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_title"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@drawable/header_bg"
    android:gravity="center_vertical"
    tools:ignore="ContentDescription" >

    <Button
        android:id="@+id/btn_back"
        style="@style/Font_WhiteSize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/goback_button"
        android:paddingLeft="5dp"
        android:paddingRight="0dp"
        android:text="@string/back"
        android:gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/header_text"
        style="@style/Title_Style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/rightBtn"
        android:layout_toRightOf="@+id/btn_back"
        android:gravity="center"
        android:text="@string/app_name" />

    <ImageButton
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/header_button"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/rightTxt"
        style="@style/Font_WhiteSize14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/rightBtn"
        android:layout_alignLeft="@+id/rightBtn"
        android:layout_alignRight="@+id/rightBtn"
        android:layout_alignTop="@+id/rightBtn"
        android:gravity="center" />

</RelativeLayout>